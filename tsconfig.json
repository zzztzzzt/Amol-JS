{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true, 

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@altair3d/*": ["src/ALTAIR3D/*"],
      "@utils/*": ["src/ALTAIR3D/utils/*"],
      "@hdr/*": ["src/ALTAIR3D/UI/hdr/*"],
      "@models/*": ["src/core/ALTAIR3D/UI/models/*"],
      "@textures/*": ["src/core/ALTAIR3D/UI/textures/*"]
    }
  }
  //,"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}